{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "UI markup language",
    "patterns": [
        {
            "include": "#announcement"
        },
        {
            "include": "#comment"
        },
        {
            "include": "#element"
        },
        {
            "include": "#expression"
        }
    ],
    "repository": {
        "announcement": {
            "patterns": [
                {
                    "match": "\\b(let)\\b",
                    "name": "storage.type.uml"
                },
                {
                    "match": "=",
                    "name": "keyword.operator.assignment.uml"
                }
            ]
        },
        "comment": {
            "patterns": [
                {
                    "match": "(^#)([^>].*)?$\\n?",
                    "name": "comment.line.number-sign.uml"
                }
            ]
        },
        "element": {
            "patterns": [
                {
                    "match": "^(btn|img|p|col)",
                    "name": "entity.name.tag.uml"
                }
            ]
        },
        "expression": {
            "patterns": [
                {
                    "include": "#literals"
                },
                {
                    "include": "#variables"
                },
                {
                    "include": "#paren-expression"
                }
            ]
        },
        "literals": {
            "patterns": [
                {
                    "match": "-?\\b(\\d+(\\.\\d+)?)\\b",
                    "name": "constant.numeric.uml"
                }
            ]
        },
        "paren-expression": {
            "begin": "\\(",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.paren.open"
                }
            },
            "end": "\\)",
            "endCaptures": {
                "0": {
                    "name": "punctuation.paren.close"
                }
            },
            "name": "expression.group",
            "patterns": [
                {
                    "include": "#expression"
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "match": "\\b([@a-zA-Z$_][a-zA-Z0-9-$_]*)\\b",
                    "name": "variable.other.uml"
                }
            ]
        }
    },
    "scopeName": "source.uml"
}
